<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             x:Class="MauiControlMaps.MainPage"
             Shell.NavBarIsVisible="False"
             >

    <ScrollView>
        <Grid Padding="0,0">

            <Grid.RowDefinitions>
                <RowDefinition Height="10"/>
                <RowDefinition Height="640" />
                <RowDefinition Height="30" />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>


            <maps:Map Grid.Row="1" x:Name="map" MapType="Street" HeightRequest="690" Grid.ColumnSpan="3" />

            <Frame x:Name="frameCoordenadas" IsVisible="false" Grid.Row="0" Grid.ColumnSpan="3" HeightRequest="110" VerticalOptions="Start" BackgroundColor="Black" Opacity="0.7" Margin="10" CornerRadius="10">

                <Grid Padding="0,-5" RowSpacing="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Label Text="Latitude:" Grid.Row="0" Grid.Column="0" VerticalTextAlignment="Center" TextColor="White" />
                    <Label Text="Longitude:" Grid.Row="1" Grid.Column="0" TextColor="White" VerticalTextAlignment="Center" />
                    <Entry x:Name="txtLatiude" Grid.Row="0" Grid.Column="1" 
                           BackgroundColor="Red" 
                           FontSize="12" 
                           WidthRequest="100"
                           TextColor="White" />
                    <Entry x:Name="txtLongitude" Grid.Row="1" Grid.Column="1" 
                           BackgroundColor="Yellow" 
                           FontSize="12" 
                           WidthRequest="100"
                           TextColor="Blue" />

                    <Button Text="Vai" 
                            FontSize="30" 
                            FontAttributes="Bold" 
                            Grid.Row="0" 
                            Margin="10"
                            Grid.RowSpan="2"
                            Grid.Column="2" 
                            Background="RosyBrown" 
                            TextColor="Black" 
                            Clicked="btnNovoLocal"
                            
                            />

                </Grid>
            
            
            </Frame>


            <Button Grid.Row="2" BackgroundColor="AntiqueWhite" Opacity="0.8" Text="Coord" TextColor="Black"
                    HeightRequest="40" WidthRequest="80" Clicked="btnAbriCoordenadas"/>

            <Button Grid.Row="3" Grid.Column="0"
                    Text="Rua"
                    Margin="10"
                    FontFamily="20"
                    FontAttributes="Bold"
                    Clicked="btnMapaRua"
                    />
            <Button Grid.Row="3" Grid.Column="1"
                    Text="Híbrido"
                    Margin="10"
                    FontFamily="20"
                    FontAttributes="Bold"
                    Clicked="btnMapaHibrido"
                />
            <Button Grid.Row="3" Grid.Column="2"
                    Text="Satelite"
                    Margin="10"
                    FontFamily="20"
                    FontAttributes="Bold"
                    Clicked="btnMapaSatelite"
            />
            



        </Grid>
        
    </ScrollView>

</ContentPage>
